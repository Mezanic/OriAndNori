<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Update Pet</title>
  <link href="/css/app.css" rel="stylesheet">
</head>
<body>
  <div class="container mx-auto p-4">
    <h1 class="text-3xl font-bold mb-4">Update Pet</h1>
    <form method="POST" action="{{ route('updatePet', [pet.id]) }}?_method=PUT">
      {{ csrfField() }}
      <div class="mb-4">
        <label for="name" class="block text-gray-700">Name:</label>
        <input type="text" id="name" name="name" value="{{ pet.name }}" class="mt-1 block w-full" required>
      </div>
      <div class="mb-4">
        <label for="birthday" class="block text-gray-700">Birthday:</label>
        <input type="date" id="birthday" name="birthday" value="{{ pet.birthday }}" class="mt-1 block w-full" required>
      </div>
      <div class="mb-4">
        <label for="personality" class="block text-gray-700">Personality:</label>
        <input type="text" id="personality" name="personality" value="{{ pet.personality }}" class="mt-1 block w-full">
      </div>
      <div class="mb-4">
        <label for="vaccined" class="block text-gray-700">Vaccined:</label>
        <input type="checkbox" id="vaccined" name="vaccined" {{ pet.vaccined ? 'checked' : '' }} class="mt-1">
      </div>
      <div class="mb-4">
        <label for="gender" class="block text-gray-700">Gender:</label>
        <select id="gender" name="gender" class="mt-1 block w-full" required>
          <option value="male" {{ pet.gender === 'male' ? 'selected' : '' }}>Male</option>
          <option value="female" {{ pet.gender === 'female' ? 'selected' : '' }}>Female</option>
        </select>
      </div>
      <div class="mb-4">
        <label for="description" class="block text-gray-700">Description:</label>
        <textarea id="description" name="description" class="mt-1 block w-full">{{ pet.description }}</textarea>
      </div>
      <div class="mb-4">
        <label for="breed" class="block text-gray-700">Breed:</label>
        <input type="text" id="breed" name="breed" value="{{ pet.breedName }}" class="mt-1 block w-full" required>
      </div>
      <div class="mb-4">
        <label for="species" class="block text-gray-700">Species:</label>
        <input type="text" id="species" name="species" value="{{ pet.speciesName }}" class="mt-1 block w-full" required>
      </div>
      <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Update Pet</button>
    </form>
  </div>
</body>
</html>